<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/your_name"
        android:textSize="16dp"
        android:textStyle="bold|italic"
        android:textColor="@color/yellow"
        android:paddingTop="20dp"
        android:paddingLeft="10dp" />

    <RelativeLayout
        android:id="@+id/groupphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_anchorGravity="left|bottom"
        android:layout_marginTop="30dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/CIV_btnadd"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignEnd="@id/CIV_profile"
            android:layout_alignBottom="@id/CIV_profile"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/ic_add_circle"
            app:civ_border_color="#fff"
            app:civ_border_width="2dp"
            app:civ_circle_background_color="@android:color/white"
            android:elevation="5px"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/CIV_profile"
            android:src="@drawable/sample_profile"
            app:civ_border_color="@color/birutua"
            app:civ_border_width="1dp"
            app:civ_circle_background_color="@android:color/white"
            />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_email"
        android:layout_below="@id/groupphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="\@your_uemail"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black"
        android:textStyle="italic|bold"
        android:enabled="false"/>

    <TextView
        android:id="@+id/tv_notlp"
        android:layout_below="@id/et_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Nomor telephone"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black"
        android:textStyle="italic|bold"/>

    <TextView
        android:id="@+id/tv_alamat"
        android:layout_below="@id/tv_notlp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="10dp"
        android:hint="Alamat Lengkap Anda"
        android:textColor="@color/black"
        android:textStyle="italic|bold"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/CV_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_alamat"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_bio"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:text="Tulis Biografi anda disini ..."
            android:padding="20dp"/>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@id/CV_bio"
        app:strokeColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:text="Ubah Profile"
        android:textColor="@android:color/black"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_TJ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Jenis"
        app:strokeColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_edit_profile"
        android:enabled="false"
        android:layout_marginHorizontal="10dp"
        android:visibility="gone"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@id/btn_TJ"
        app:strokeColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black"
        android:text="Logout"/>


</RelativeLayout>